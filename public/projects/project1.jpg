<svg xmlns="http://www.w3.org/2000/svg" width="800" height="600" viewBox="0 0 800 600">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2c3e50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3498db;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="800" height="600" fill="url(#grad1)"/>
  
  <!-- Modern House -->
  <g transform="translate(100, 150)" fill="white" opacity="0.9">
    <!-- Main structure -->
    <rect x="0" y="100" width="600" height="250" fill="white"/>
    
    <!-- Second floor -->
    <rect x="100" y="0" width="400" height="100" fill="white"/>
    
    <!-- Windows -->
    <rect x="50" y="150" width="100" height="80" fill="#2c3e50"/>
    <rect x="200" y="150" width="100" height="80" fill="#2c3e50"/>
    <rect x="350" y="150" width="100" height="80" fill="#2c3e50"/>
    <rect x="500" y="150" width="50" height="150" fill="#2c3e50"/>
    
    <!-- Second floor windows -->
    <rect x="150" y="30" width="80" height="50" fill="#2c3e50"/>
    <rect x="350" y="30" width="80" height="50" fill="#2c3e50"/>
    
    <!-- Door -->
    <rect x="250" y="250" width="100" height="100" fill="#34495e"/>
    <rect x="290" y="300" width="20" height="5" fill="white"/>
  </g>
  
  <!-- Landscaping -->
  <g transform="translate(0, 400)">
    <!-- Grass -->
    <rect width="800" height="200" fill="#27ae60" opacity="0.7"/>
    
    <!-- Path -->
    <path d="M350,0 L450,0 L500,200 L300,200 Z" fill="#bdc3c7" opacity="0.8"/>
    
    <!-- Trees -->
    <circle cx="150" cy="50" r="30" fill="#16a085" opacity="0.8"/>
    <rect x="145" y="80" width="10" height="40" fill="#795548"/>
    
    <circle cx="650" cy="50" r="30" fill="#16a085" opacity="0.8"/>
    <rect x="645" y="80" width="10" height="40" fill="#795548"/>
    
    <circle cx="200" cy="100" r="20" fill="#16a085" opacity="0.8"/>
    <rect x="195" y="120" width="10" height="30" fill="#795548"/>
    
    <circle cx="600" cy="100" r="20" fill="#16a085" opacity="0.8"/>
    <rect x="595" y="120" width="10" height="30" fill="#795548"/>
  </g>
  
  <!-- Text label -->
  <g transform="translate(400, 550)" text-anchor="middle">
    <text font-family="Arial" font-size="24" fill="white" font-weight="bold">Modern Residence</text>
  </g>
</svg>